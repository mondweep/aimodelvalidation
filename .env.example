# AI Model Validation PoC - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real credentials to version control

# =============================================================================
# PROJECT CONFIGURATION
# =============================================================================

# Project environment (development, testing, staging, production)
NODE_ENV=development
PYTHON_ENV=development

# Project paths
PROJECT_ROOT=/workspaces/aimodelvalidation
DATA_ROOT=/workspaces/aimodelvalidation/data
MODELS_ROOT=/workspaces/aimodelvalidation/models

# =============================================================================
# CVAT CONFIGURATION
# =============================================================================

# CVAT server settings
CVAT_HOST=localhost
CVAT_PORT=8080
CVAT_BASE_URL=http://localhost:8080

# CVAT authentication
CVAT_USERNAME=your_cvat_username
CVAT_PASSWORD=your_cvat_password
CVAT_API_TOKEN=your_cvat_api_token

# CVAT organization and project settings
CVAT_ORGANIZATION=your_organization
CVAT_PROJECT_NAME=ai_model_validation_poc

# =============================================================================
# DEEPCHECKS CONFIGURATION  
# =============================================================================

# Deepchecks validation settings
DEEPCHECKS_OUTPUT_DIR=/workspaces/aimodelvalidation/deepchecks_reports
DEEPCHECKS_MIN_SAMPLES=100
DEEPCHECKS_CONFIDENCE_LEVEL=0.95

# Data quality thresholds
DATA_QUALITY_THRESHOLD=0.8
MODEL_PERFORMANCE_THRESHOLD=0.7
DRIFT_DETECTION_THRESHOLD=0.1

# =============================================================================
# ULTRALYTICS YOLO CONFIGURATION
# =============================================================================

# YOLO model settings
YOLO_MODEL_SIZE=yolov8n  # options: yolov8n, yolov8s, yolov8m, yolov8l, yolov8x
YOLO_PRETRAINED=true
YOLO_INPUT_SIZE=640

# Training parameters
YOLO_EPOCHS=100
YOLO_BATCH_SIZE=16
YOLO_LEARNING_RATE=0.01
YOLO_PATIENCE=50

# GPU/CPU configuration
YOLO_DEVICE=auto  # options: auto, cpu, 0, 1, 2, etc.
YOLO_WORKERS=8

# =============================================================================
# WEBCAM CONFIGURATION
# =============================================================================

# Camera settings
WEBCAM_DEVICE_ID=0
WEBCAM_RESOLUTION_WIDTH=1920
WEBCAM_RESOLUTION_HEIGHT=1080
WEBCAM_FPS=30

# Capture settings
CAPTURE_FORMAT=jpg
CAPTURE_QUALITY=95
CAPTURE_INTERVAL_MS=1000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database (for development)
DATABASE_URL=sqlite:///./ai_model_validation.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis (for caching and task queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT=structured  # options: simple, detailed, structured, json

# Log file settings
LOG_FILE_PATH=./logs/app.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5

# =============================================================================
# API CONFIGURATION
# =============================================================================

# FastAPI server settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_DEBUG=true

# API security
API_SECRET_KEY=your_super_secret_key_change_this_in_production
API_ACCESS_TOKEN_EXPIRE_MINUTES=30
API_ALGORITHM=HS256

# CORS settings
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# =============================================================================
# MONITORING & METRICS
# =============================================================================

# Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Performance monitoring
PERFORMANCE_MONITORING=true
MEMORY_MONITORING=true
GPU_MONITORING=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test database
TEST_DATABASE_URL=sqlite:///./test_ai_model_validation.db

# Test data paths
TEST_DATA_ROOT=./tests/data
TEST_MODELS_ROOT=./tests/models

# Mock settings for testing
MOCK_CVAT_API=true
MOCK_EXTERNAL_SERVICES=true

# =============================================================================
# CLOUD STORAGE (OPTIONAL)
# =============================================================================

# AWS S3 settings (if using cloud storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_s3_bucket
AWS_REGION=us-west-2

# Google Cloud Storage (alternative)
GOOGLE_CLOUD_PROJECT=your_gcp_project
GOOGLE_CLOUD_BUCKET=your_gcs_bucket
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# =============================================================================
# NOTIFICATION SETTINGS (OPTIONAL)
# =============================================================================

# Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_FROM_EMAIL=noreply@yourcompany.com
NOTIFICATION_TO_EMAILS=admin@yourcompany.com,team@yourcompany.com

# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#ai-model-validation

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Jupyter notebook settings
JUPYTER_PORT=8888
JUPYTER_TOKEN=your_jupyter_token

# Development debugging
DEBUG_MODE=true
VERBOSE_LOGGING=true
PROFILING_ENABLED=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Input validation
MAX_FILE_SIZE_MB=100
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,bmp,tiff
ALLOWED_VIDEO_EXTENSIONS=mp4,avi,mov

# Security headers
SECURITY_HEADERS_ENABLED=true
CSRF_PROTECTION=true

# =============================================================================
# USAGE INSTRUCTIONS
# =============================================================================

# 1. Copy this file to .env: cp .env.example .env
# 2. Replace placeholder values with your actual configuration
# 3. Never commit .env files to version control
# 4. Use different .env files for different environments
# 5. Consider using a secrets management service for production

